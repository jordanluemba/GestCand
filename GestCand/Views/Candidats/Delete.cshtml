@model GestCand.Models.Candidat

@{
    ViewData["Title"] = "Supprimer le Candidat";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Supprimer le Candidat</h4>
                </div>
                <div class="card-body">

                    <p class="text-center fw-bold">Êtes-vous sûr de vouloir supprimer ce candidat ?</p>

                    <dl class="row mb-3">
                        <dt class="col-sm-4 text-end">Nom :</dt>
                        <dd class="col-sm-8 text-center">@Model.Nom</dd>

                        <dt class="col-sm-4 text-end">Postnom :</dt>
                        <dd class="col-sm-8 text-center">@Model.Postnom</dd>

                        <dt class="col-sm-4 text-end">Prénom :</dt>
                        <dd class="col-sm-8 text-center">@Model.Prenom</dd>

                        <dt class="col-sm-4 text-end">Sexe :</dt>
                        <dd class="col-sm-8 text-center">@Model.Sexe</dd>

                        <dt class="col-sm-4 text-end">Lieu de naissance :</dt>
                        <dd class="col-sm-8 text-center">@Model.LieuNaissance</dd>

                        <dt class="col-sm-4 text-end">Date de naissance :</dt>
                        <dd class="col-sm-8 text-center">@Model.DateNaissance?.ToShortDateString()</dd>

                        <dt class="col-sm-4 text-end">Nationalité :</dt>
                        <dd class="col-sm-8 text-center">@Model.Nationalite</dd>

                        <dt class="col-sm-4 text-end">Adresse :</dt>
                        <dd class="col-sm-8 text-center">@Model.Adresse</dd>

                        <dt class="col-sm-4 text-end">Téléphone :</dt>
                        <dd class="col-sm-8 text-center">@Model.Telephone</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger px-4 me-2">Supprimer</button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary px-4">Retour à la liste</a>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>
