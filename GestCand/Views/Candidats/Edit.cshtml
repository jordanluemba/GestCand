@model GestCand.Models.Candidat

@{
    ViewData["Title"] = "Modifier un Candidat";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Modifier un Candidat</h4>
                </div>
                <div class="card-body">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <label asp-for="Nom" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Nom" class="form-control" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Postnom" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Postnom" class="form-control" />
                                <span asp-validation-for="Postnom" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Prenom" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Prenom" class="form-control" />
                                <span asp-validation-for="Prenom" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Sexe" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <select asp-for="Sexe" class="form-select">
                                    <option value="">Sélectionner</option>
                                    <option value="Homme" selected="@Model.Sexe == " Homme"">Homme</option>
                                    <option value="Femme" selected="@Model.Sexe == " Femme"">Femme</option>
                                </select>
                                <span asp-validation-for="Sexe" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="LieuNaissance" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="LieuNaissance" class="form-control" />
                                <span asp-validation-for="LieuNaissance" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="DateNaissance" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="DateNaissance" type="date" class="form-control" />
                                <span asp-validation-for="DateNaissance" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Nationalite" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Nationalite" class="form-control" />
                                <span asp-validation-for="Nationalite" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Adresse" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Adresse" class="form-control" />
                                <span asp-validation-for="Adresse" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <label asp-for="Telephone" class="col-sm-4 col-form-label text-end"></label>
                            <div class="col-sm-8">
                                <input asp-for="Telephone" class="form-control" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary px-5">Enregistrer</button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">Retour à la liste</a>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
