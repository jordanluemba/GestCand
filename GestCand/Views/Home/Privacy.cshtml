@{
    ViewData["Title"] = "Membres du Groupe";
}

@* Liste aléatoire de 15 membres fictifs *@
@{
    var membres = new[] {
        "SHUKURU KUBUYA",
        "LUEMBA MBEDIKA",
        "BASUNGA TEBA",
        "EYOMA ENOCK",
        "KILONDO KINGWASA",
        "KHUBA MAVINGA",
        "KINKUFI MBWOLO",
        "NGANDA DANIEL",
        "LUMFWAKENDA NDONGALA",
        "MWELA MUNDEMBU",
        "MANGU BENA",
        "DIMBI DIMBI",
        "EBUTA MOKUNGU",
        "MUSAADA KUSIMWA",
        "NTUMBA NSAMBAYI"
    };
}

<div class="container my-5">
    <div class="card shadow-lg rounded-4 border-0 bg-white bg-opacity-75">
        <div class="card-header bg-primary bg-gradient text-white text-center rounded-top-4">
            <h2 class="mb-0">Membres du Groupe</h2>
            <p class="mb-0">Découvrez notre équipe de 15 membres</p>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var nom in membres)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-3 text-center bg-light">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <div class="mb-3">
                                    <span class="rounded-circle bg-primary bg-gradient text-white d-inline-flex justify-content-center align-items-center" style="width:60px; height:60px; font-size:1.7rem;">
                                        @nom.Substring(0,1)
                                    </span>
                                </div>
                                <h5 class="card-title mb-1">@nom</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
